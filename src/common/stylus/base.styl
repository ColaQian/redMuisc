body, html
  line-height: 1
  font-family: 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  user-select: none
  -webkit-tap-highlight-color: transparent
@keyframes playClick
  0%
    transform: scale(1)
  50%
    transform: scale(0.96,1)
  100%
    transform: scale(1)
    
@keyframes songClick
  0%
    transform: scale(1)
  50%
    transform: scale(0.99,1)
  100%
    transform: scale(1)
    
@keyframes newSongClick
  0%
    transform: scale(1)
  50%
    transform: scale(0.98,0.99)
  100%
    transform: scale(1)
    
@keyframes rotate
  0%
    transform: rotate(0)
  100%
    transform: rotate(360deg)
    
@keyframes playerToggle
  0%
    transform: scale(0.1)
    opacity: 0
    transform: translate3d(-1200px,550px,0)
  100%
    transform: scale(1)
    opacity: 1
    transform: translate3d(0,0,0)
    
@keyframes miniPlayerAvatarClick
  0%
    transform: scale(1)
  50%
    transform: scale(0.98,0.98)
  100%
    transform: scale(1)