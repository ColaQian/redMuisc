.playlist
  display: flex
  width: 100%
  height: 60px
  border-radius: 5px
  .playlist-img-wrapper
    display: inline-block
    height: 40px
    width: 50px
    margin: 10px
    .playlist-img
      height: 100%
      width: 100%
  .playlist-name
    flex: 2
    display: inline-block
    height: 14px
    line-height: 14px
    font-size: 14px
    vertical-align: top
    margin-top: 23px
  .playlist-item
    flex: 1
    display: inline-block
    height: 12px
    line-height: 12px
    font-size: 12px
    vertical-align: top
    margin-top: 24px
    color: #bfbfbf