.song
  display: flex
  width: 100%
  height: 40px
  border-radius: 5px
  .song-item
    display: inline-block
    padding: 12px 0px
    height: 16px
    line-height: 16px
    font-size: 14px
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
    &.song-name
      flex: 2
      padding-left: 10px
    &.song-singer
      flex: 1
    &.song-album
      flex: 1
    