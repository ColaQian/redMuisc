.album
  width: 100%
  height: 60px
  display: flex
  border-radius: 5px
  .album-cover-wrapper
    position: relative
    display: inline-block
    height: 40px
    width: 40px
    margin: 10px
    margin-right: 20px
    .album-cover-back
      position: absolute
      width: 40px
      height: 40px
      border-radius: 20px
      left: 7px
      background: #222222
      z-index: 1
    .album-cover-img
      position: absolute
      width: 40px
      height: 40px
      z-index: 2
  .album-name
    display: inline-block
    flex: 2
    height: 16px
    line-height: 16px
    font-size: 15px 
    vertical-align: top
    margin-top: 22px
  .album-creator
    flex: 1
    display: inline-block
    height: 14px
    line-height: 14px
    font-size: 14px
    vertical-align: top
    margin-top: 23px