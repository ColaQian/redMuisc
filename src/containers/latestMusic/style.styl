.latest-music-wrapper
  width: 100%
  position: relative
  .latest-music-title
    position: absolute
    top: 0px
    height: 60px
    width: 100%
    z-index: 5
    overflow: hidden
    .latest-music-title-blur
      position: absolute
      top: -100px
      left: -100px
      width: 200%
      height: 200px
      background: #fbfbfb
      filter: blur(28px) opacity(0.8)
      z-index: -1
    .latest-music-title-item
      display: inline-block
      background: #5a5a5a
      padding: 0 10px
      border-radius: 3px
      margin: 18px 0
      height: 24px
      line-height: 24px
      font-size: 14px
      text-align: center
      color: #f5f5f5
  .latest-music
    width: 100%
    position: relative
    overflow: hidden
    height: 500px
    .latest-music-scroll
      width: 100%
      .latest-music-content
        padding-top: 60px
        width: 100%
        display: flex
        justify-content: space-between
        flex-wrap: wrap
        .latest-music-content-item
          flex: 1
          margin-bottom: 15px
        
        