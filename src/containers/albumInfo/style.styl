.album-info-wrapper
  width: 100%
  height: 100%
  .album-info-background
    position: absolute
    overflow: hidden
    z-index: -3
    width: 100%
    height: 200px
    left: -20px
    right: -20px
    background-size:100%
    background-repeat: no-repeat
    filter: blur(50px) opacity(0.8)
    opacity: 1
  .album-info-background2
    position: absolute
    z-index: -1
    width: 100%
    height: 200px
    top: -10px
    left: -20px
    right: -20px
    background:#f5f5f5
    filter: blur(20px)
    opacity: 0.8
  .album-info
    width: 100%
    .song-list-info
      margin-top: 20px
      width: 100%
      display: flex
      .song-list-info-avatar
        flex: 0 0 200px
        display: inline-block
        margin-right: 30px
      .song-list-info-desc
        display: inline-block
        flex: 1
    .album-info-playall
      margin: 25px 0 10px 10px
    .album-info-content-wrapper
      box-sizing: border-box
      position: relative
      overflow: hidden
      height: 250px
      .album-info-content
        width: 100%