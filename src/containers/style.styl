.nm-music
  position: relative
  margin: 20px auto
  width: 1200px
  height: 600px
  border: 1px solid #d73435
  border-radius: 6px
  overflow: hidden
  .nm-sidebar
    position: absolute
    width: 200px
    height: 550px
    background: #f7f7f7
    top: 0
    left: 0
  .nm-sidebar-back-wrapper
    width: 100%
    height: 30px
    background: #d73435
    margin-bottom: 10px
    .nm-sidebar-back
      display: inline-block
      width: 50px
      height: 30px
      padding: 7px 0
      box-sizing: border-box
      border-right: 1px solid #f7f7f7
      font-size: 14px 
      text-align: center
      color: #fef0ef
      &:hover
        transition: all 0.3s
        color: #d73435
        background: #fef0ef
  .nm-main
    position: relative
    width: 960px
    height: 550px
    right: 0
    top: 0
    left: 220px
    right: 20px
  .nm-player
    position: absolute
    bottom: 0
    right: 0
    left: 0
    .normal-player
      width: 100%
      height: 550px
    .mini-player
      width: 100%
      height: 50px
  