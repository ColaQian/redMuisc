.nm-music
  position: relative
  margin: 30px auto
  width: 1200px
  height: 600px
  border: 2px solid #e9e9e9
  border-radius: 4px
  overflow: hidden
  .nm-sidebar
    position: absolute
    width: 200px
    height: 550px
    background: #f7f7f7
    top: 0
    left: 0
  .nm-main
    position: relative
    width: 960px
    height: 550px
    right: 0
    top: 0
    left: 220px
    right: 20px
  .nm-player
    position: absolute
    bottom: 0
    right: 0
    left: 0
    .normal-player
      width: 100%
      height: 550px
    .mini-player
      width: 100%
      height: 50px
  