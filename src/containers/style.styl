.nm-music
  position: relative
  margin: 20px auto
  width: 1200px
  height: 600px
  border: 1px solid #d73435
  border-radius: 6px
  overflow: hidden
  .nm-sidebar
    position: absolute
    width: 200px
    height: 550px
    background: #f7f7f7
    top: 0
    left: 0
  .nm-sidebar-back-wrapper
    width: 100%
    height: 30px
    background: #d73435
    margin-bottom: 10px
    .nm-sidebar-back
      display: inline-block
      width: 50px
      height: 30px
      padding: 7px 0
      box-sizing: border-box
      border-right: 1px solid #f7f7f7
      font-size: 14px 
      text-align: center
      color: #fef0ef
      &:hover
        transition: all 0.3s
        color: #d73435
        background: #fef0ef
  .nm-main
    position: relative
    width: 960px
    height: 550px
    right: 0
    top: 0
    left: 220px
    right: 20px
  .nm-player
    position: absolute
    bottom: 0
    right: 0
    left: 0
    .normal-player
      width: 100%
    .mini-player
      position: relative
      width: 100%
      height: 50px
      display: flex
      .mini-player-line
        position: absolute
        width: 100%
        height: 1px
        background: #e9e9e9
        top: 1px
      .mini-player-avatar-wrapper
        flex: 0 0 50px
        width: 50px
        height: 48px
        margin-top: 2px
        position: relative
        .mini-player-toggle
          position: absolute
          height: 50px
          width: 50px
          z-index: 2
          background: rgba(90,90,90,0)
          &:hover
            background: rgba(90,90,90,0.4)
        .mini-player-avatar
          position: absolute
          display: inline-block
          height: 50px
          width: 50px
          z-index: 1
      .mini-player-play-wrapper
        position: relative
        felx: 0 0 120px
        height: 50px
        width: 120px
        margin: 0 30px
        .mini-player-play-item
          position: absolute
          display: inline-block
          background: #d73435
          text-align: center
          &.mini-player-play-presong
            left: 0
            top: 12px
            height: 26px
            line-height: 26px
            font-size: 15px
            width: 26px
            border-radius: 50%
          &.mini-player-play-toggle
            height: 30px
            width: 30px
            height: 30px
            line-height: 30px
            font-size: 18px
            text-align: center
            border-radius: 50%
            top: 10px
            left: 45px
          &.mini-player-play-next
            height: 26px
            width: 26px
            line-height: 26px
            font-size: 15px
            border-radius: 50%
            top: 12px
            right: 0
      .mini-player-songinfo-progress
        flex: 2
        display: inline-block
        position: relative
        height: 50px
        .mini-player-songinfo
          display: inline-block
          width: 100%
          height: 20px
          position: relative
          .mini-player-songinfo-name
            position: absolute
            left: 0
            top: 8px
            height: 12px
            line-height: 12px
            font-size: 12px
            .mini-player-songinfo-singer
              color: #5a5a5a
          .mini-player-songinfo-time
            position: absolute
            right: 0
            top: 8px
            height: 12px
            line-height: 12px
            font-size: 12px
        .mini-player-progress
          display: inline-block
          position: absolute
          left: 0
          bottom: 5px
          width: 100%
      .mini-player-funcs
        flex: 1
        display: flex
        height: 50px
        .mini-player-funcs-item
          flex: 1
          height: 50px
          line-height: 50px
          font-size: 23px
          text-align: center