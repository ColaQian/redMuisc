.nm-music
  position: relative
  margin: 20px auto
  width: 1200px
  height: 600px
  border: 1px solid #d73435
  border-radius: 6px
  overflow: hidden
  .nm-sidebar
    position: absolute
    width: 200px
    height: 550px
    background: #f7f7f7
    top: 0
    left: 0
    z-index: 3
  .nm-sidebar-back-wrapper
    width: 100%
    height: 30px
    background: #d73435
    margin-bottom: 10px
    .nm-sidebar-back
      display: inline-block
      width: 50px
      height: 30px
      padding: 7px 0
      box-sizing: border-box
      border-right: 1px solid #f7f7f7
      font-size: 14px 
      text-align: center
      color: #fef0ef
      &:hover
        transition: all 0.3s
        color: #d73435
        background: #fef0ef
  .nm-main
    position: relative
    width: 960px
    height: 550px
    right: 0
    top: 0
    left: 220px
    right: 20px
    z-index: 2
  .nm-player
    position: absolute
    bottom: 0
    right: 0
    left: 0
    z-index: 3
    .normal-player-wrapper
      width: 100%
      height: 550px
      background: #fbfbfb
      overflow: hidden
      .normal-player-background
        position: absolute
        overflow: hidden
        z-index: 1
        width: 100%
        height: 550px
        left: 0px
        right: 0px
        background-size:100%
        background-repeat: no-repeat
        filter: blur(40px) opacity(0.8)
        opacity: 1
      .normal-player-background2
        position: absolute
        z-index: 2
        width: 100%
        height: 550px
        top: 0px
        left: 0px
        right: 0px
        background:#f5f5f5
        filter: blur(20px)
        opacity: 0.4
      .normal-player
        z-index: 4
        position: relative
        width: 100%
        height: 550px
        overflow: hidden
        .normal-player-scroll
          width: 100%
          position: relative
          .normal-player-top
            position: relative
            width: 100%
            height: 450px
            .normal-player-top-left
              position: absolute
              width: 500px
              height: 450px
              .avatar-out-cover
                margin: 40px auto
                height: 350px
                width: 350px
                border: 10px solid  rgba(191,191,191,0.4)
                border-radius: 50%
                animation: rotate 20s linear infinite
                &.avatar-out-cover-pause
                  animation-play-state: paused
                .avatar-middle-cover
                  margin: auto
                  height: 190px
                  width: 190px
                  border: 80px solid  rgba(34,34,34,0.99)
                  border-radius: 50%
                  .avatar-in-cover
                    margin: auto
                    height: 180px
                    width: 180px
                    border: 5px solid  rgba(189,38,54,0.97)
                    border-radius: 50%
                    .normal-player-avatar
                      height: 100%
                      width: 100%
                      border-radius: 50%
            .normal-player-top-right
              position: absolute
              margin-top: 30px 
              width: 500px
              height: 450px
              right: 40px
              .normal-player-top-right-songinfo
                width: 100%
                letter-spacing: 1px
                .normal-player-top-right-songinfo-name
                  margin: 10px 0
                  height: 20px
                  line-height: 20px
                  font-size: 20px
                  overflow: hidden
                  white-space: nowrap
                  text-overflow: ellipsis
                .normal-player-top-right-songinfo-alandsin
                  display: inline-block
                  height: 13px
                  line-height: 13px
                  font-size: 13px
                  margin-right: 15px
                  .normal-player-top-right-songinfo-alandsin-detail
                    display: inline-block
                    color: #00a2ae
              .normal-player-top-right-lyric
                padding-top: 20px
                width: 100%
                height: 350px
                .normal-player-top-right-lyric-scroll
                  width: 100%
                  height: 100%
                  overflow: hidden
                  .lyric-wrapper
                    width: 100%
                    .lyric-wrapper-item
                      height: 30px
                      line-height: 30px
                      font-size: 15px
                      color: #404040
                      &.lyric-wrapper-current-item
                        color: #108ee9
          .normal-player-bottom
            position: relative
            width: 100%
            height: 800px
            padding-top: 50px
            .normal-player-bottom-comment-wrapper
              position: absolute
              width: 60%
              left: 5%
              .normal-player-bottom-comment-title
                width: 100%
                height: 30px
                line-height: 20px
                font-size: 18px
                border-bottom: 1px solid #919191
                margin-bottom: 20px
              .normal-player-bottom-comment
                width: 100%
                height: 700px
                position: relative
                overflow: hidden
                .normal-player-bottom-comment-scroll
                  width: 100%
                  .normal-player-bottom-comment-hot
                    width: 100%
                    height: 16px
                    line-height: 16px
                    font-size: 14px
                    padding-bottom: 10px
                    border-bottom: 1px solid #919191
                    &.normal-player-bottom-comment-new
                      margin-top: 20px
            .normal-player-bottom-simi-wrapper
              position: absolute
              width: 25%
              right: 5%
              .normal-player-bottom-simi-title
                width: 100%
                height: 30px
                line-height: 20px
                font-size: 18px
                border-bottom: 1px solid #919191
                margin-bottom: 15px
              .normal-player-bottom-simi-songinfo
                display: flex
                height: 40px
                border-radius: 5px
                &:hover
                  background:   rgba(217,217,217,0.2)
                .normal-player-bottom-simi-item
                  display: inline-block
                  height: 36px
                  line-height: 36px
                  font-size: 14px
                  overflow: hidden
                  white-space: nowrap
                  text-overflow: ellipsis
                  vertical-align: top
                  &.normal-player-bottom-simi-song
                    flex: 2
                  &.normal-player-bottom-simi-singer
                    flex: 1
                    text-align: right
              
    .mini-player
      position: relative
      width: 100%
      height: 50px
      display: flex
      .mini-player-line
        position: absolute
        width: 100%
        height: 1px
        background: #e9e9e9
        top: 1px
      .mini-player-avatar-wrapper
        flex: 0 0 50px
        margin-top: 2px
        width: 50px
        height: 48px
        position: relative
        .mini-player-toggle
          position: absolute
          height: 50px
          width: 50px
          line-height: 48px
          font-size: 30px
          text-align: center
          z-index: 2
          background: rgba(90,90,90,0)
          opacity: 0
          &:hover
            opacity: 1
            background: rgba(90,90,90,0.4)
        .mini-player-avatar
          position: absolute
          display: inline-block
          height: 50px
          width: 50px
          z-index: 1
      .mini-player-play-wrapper
        position: relative
        felx: 0 0 120px
        height: 50px
        width: 120px
        margin: 0 30px
        .mini-player-play-item
          position: absolute
          display: inline-block
          background: #d73435
          text-align: center
          &.mini-player-play-presong
            left: 0
            top: 12px
            height: 26px
            line-height: 26px
            font-size: 15px
            width: 26px
            border-radius: 50%
          &.mini-player-play-toggle
            height: 30px
            width: 30px
            height: 30px
            line-height: 30px
            font-size: 18px
            text-align: center
            border-radius: 50%
            top: 10px
            left: 45px
          &.mini-player-play-next
            height: 26px
            width: 26px
            line-height: 26px
            font-size: 15px
            border-radius: 50%
            top: 12px
            right: 0
      .mini-player-songinfo-progress
        flex: 2
        display: inline-block
        position: relative
        height: 50px
        .mini-player-songinfo
          display: inline-block
          width: 100%
          height: 20px
          position: relative
          .mini-player-songinfo-name
            position: absolute
            left: 0
            top: 8px
            height: 12px
            line-height: 12px
            font-size: 12px
            .mini-player-songinfo-singer
              color: #5a5a5a
          .mini-player-songinfo-time
            position: absolute
            right: 0
            top: 8px
            height: 12px
            line-height: 12px
            font-size: 12px
        .mini-player-progress
          display: inline-block
          position: absolute
          left: 0
          bottom: 5px
          width: 100%
      .mini-player-funcs
        flex: 1
        display: flex
        height: 50px
        .mini-player-funcs-item
          flex: 1
          display: inline-block
          height: 50px
          line-height: 50px
          font-size: 23px
          text-align: center
          .mini-player-funcs-list-count
            display: inline-block
            vertical-align: bottom
            margin: 17px 0
            width: 25px
            height: 16px
            border-radius: 8px
            line-height: 15px
            font-size: 12px
            text-align: center
            background: #919191
            color: #f7f7f7