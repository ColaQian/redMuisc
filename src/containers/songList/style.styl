.playlist-wrapper
  position: relative
  width: 100%
  height: 100%
  overflow: hidden
  white-space: nowrap
  .playlist-w
    position: relative
    width: 100%
    .playlist-meta
      width: 100%
      height: 70px
      display: flex
      .playlist-meta-title
        flex: 0 0 60px
        margin: auto 20px
        margin-left: 0px
        padding: 0 5px
        display: inline-block
        border: 1px solid #f46e65
        height: 20px
        line-height: 20px
        font-size: 14px
        text-align: center
        color: #f04134
      .playlist-meta-content
        flex: 1
        displsy: flex
        margin: auto 0
        justify-content: space-between
        flex-wrap: wrap
        align-content: space-between
        .playlist-meta-content-item
          display: inline-block
          flex: 1
          box-sizing: border-box
          height: 20px
          line-height: 20px
          font-size: 12px
          text-align: center
          padding: 0 30px
          border-right: 1px solid #e9e9e9
          &.playlist-meta-content-item-selected
            color: #f04134
          &:nth-child(6)
            border-right: 0px
    .playlist-con-wrapper
      width: 960px
      position: relative
      display: flex
      justify-content: space-between
      flex-wrap: wrap
      align-content: space-between
      .playlist-content
        flex: 1
        margin: 10px
    