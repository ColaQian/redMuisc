.recommend-song-list-wrapper
  position:relative
  width: 200px
  margin:0 auto
  .recommend-song-list-top
    background: #5a5a5a
    position: relative
    box-sizing: border-box
    border: 1px solid #f5f5f5
    top: 0
    left: 0
    width: 100%
    height: 200px
    &:hover
      transition: all 0.5s
      opacity: 0.8
    img
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
    .recommend-song-list-top-count
      position: absolute
      z-index: 2
      top: 0px
      right: 1px
      background: linear-gradient(to right,rgba(233,233,233,0.1) ,rgba(64,64,64,0.4))
      color: #fff
      height: 16px
      line-height: 16px
      font-size: 15px
      text-align: center
  .recommend-song-list-bottom
    margin-top: 12px
    height: 18px
    line-height: 18px
    font-size: 16px
    width: 180px
    font-weight: 500
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
  .recommend-song-list-bottom-user
    margin-top: 12px
    height: 12px
    line-height: 12px
    font-size: 12px
    width: 180px
    color: #bfbfbf
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
    
    