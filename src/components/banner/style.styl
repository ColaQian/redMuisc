.slider
    min-height: 1px
    width: 100%
    height: 250px
    position: relative
    .slider-group
      position: relative
      overflow: hidden
      white-space: nowrap
      height: 100%
      .slider-item
        position: relative
        float: left
        height: 100%
        width: 600px
        box-sizing: border-box
        padding-right: 20px
        overflow: hidden
        text-align: center
        a
          display: block
          width: 100%
          height: 250px
          overflow: hidden
          text-decoration: none
          border-radius: 10px
          box-sizing: border-box
          border: 1px solid #f7f7f7
          img
            display: block
            width: 100%
            height: 100%
        .item-meta
          height: 20px
          position: absolute
          border-top-left-radius: 10px
          border-bottom-left-radius: 10px
          right: 20px
          bottom: 10px
          background: #d73435
          .item-meta-text
            display: inline-block
            padding: 0 10px 0 10px
            height: 20px
            line-height: 20px
            font-size: 14px
            color: #fff
            text-align: center
            