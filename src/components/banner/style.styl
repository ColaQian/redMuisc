.slider
    min-height: 1px
    width: 90%
    height: 250px
    position: relative
    .slider-group
      position: relative
      overflow: hidden
      white-space: nowrap
      height: 100%
      .slider-item
        position: relative
        float: left
        overflow: hidden
        text-align: center
        a
          display: block
          width: 100%
          height: 250px
          overflow: hidden
          text-decoration: none
          img
            display: block
            width: 100%
            height: 100%
        .item-meta
          height: 20px
          position: absolute
          border-radius: 10px
          right: -10px
          bottom: 10px
          background: #d73435
          .item-meta-text
            display: inline-block
            padding: 0 15px 0 10px
            height: 20px
            line-height: 20px
            font-size: 14px
            color: #fff
            text-align: center
            