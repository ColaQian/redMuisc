.new-song-wrapper
  height: 60px
  width: 100%
  box-sizing: border-box
  .new-song-index
    display: inline-block
    width: 30px
    height: 60px
    line-height: 60px
    font-size: 12px
    text-align: center
    vertical-align: top
  .new-song-img
    display: inline-block
    height: 50px
    width: 50px
    margin: 5px 0
    background-repeat: no-repeat
    background-size: 100%
  .new-song-desc
    display: inline-block
    vertical-align: top
    margin-left: 10px
    height: 100%
    p
      margin: 10px 0
      height: 16px
      line-height: 16px
      font-size: 16px
    span
      display: inline-block
      width: 220px
      height: 12px
      line-height: 12px
      font-size: 12px
      color: #919191
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis
      
      
    