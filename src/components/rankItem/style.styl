.rank-item
  position: relative
  width: 250px
  height: 200px
  border-radius: 10px
  overflow: hidden
  .rank-item-top
    position: absolute
    width: 100%
    height: 100%
    z-index: 3
    &.top-super-raise
      background: linear-gradient(to top,#add8f7,#7ec2f3,#49a9ee)
    &.top-new-songs
      background: linear-gradient(to top,#76cdd3,#3db8c1,#00a2ae)
    &.top-origin-songs
      background: linear-gradient(to top,#fa90ba,#f7629e,#f5317f)
    &.top-hot-songs
      background: linear-gradient(to top,#f79992,#f46e65,#f04134)
    &:hover
      transition: all 0.5s
      opacity: 0
    .rank-item-top-desc
      display: inline-block
      margin: 60px 0
      height: 80px
      width: 100%
      line-height: 80px
      font-size: 25px
      text-align: center
      letter-spacing: 3px
      color: #f5f5f5
  .rank-item-middle
    position: absolute
    width: 100%
    height: 100%
    z-index: 2
    &:hover
      transition: all 0.5s
      transform: translate(100%,0)
    .rank-item-middle-content
      width: 90%
      height: 100px
      margin-top: 50px
      padding: 0 5%
      .rank-item-middle-content-item
        display: block
        height: 30px
        line-height: 30px
        font-size: 15px
        color: #f5f5f5
        overflow: hidden
        white-space: nowrap
        text-overflow: ellipsis
  .rank-item-bottom
    position: absolute
    width: 100%
    height: 100%
    filter: blur(2px) 
    background-size: 100%
    background-repeat: no-repeat
    z-index: 1