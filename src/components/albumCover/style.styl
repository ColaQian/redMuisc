.album-cover
  width: 150px
  margin-left: 0
  margin-right: 30px
  .album-cover-top
    width: 100%
    height: 150px
    position: relative
    &:hover
      transition: all 0.6s
      transform:translate3d(2px,0,0)
      opacity: 0.9
    .album-cover-top-back
      position: absolute
      z-index: -1
      width: 100%
      height: 100%
      left: 25px
      border-radius: 50%
      background: #222222
    .album-cover-top-img
      position: absolute
      z-index: 1
      width: 100%
      height: 100%
  .album-cover-bottom
    width: 90%
    .album-cover-bottom-name
      width: 100%
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis
      height: 14px
      line-height: 14px
      font-size: 14px
      padding: 5px 0 8px 0
      color: #222222
    .album-cover-bottom-time
      display: inline-block
      height: 12px
      line-height: 12px
      font-size: 12px
      color: #919191
      