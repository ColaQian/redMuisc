.singer-info-show-wrapper
  width: 100%
  position: relative
  margin: 0 auto
  .singer-info-show
    width: 100%
    position: relative
    .singer-info-show-name
      width: 100%
      height: 30px
      line-height: 30px
      font-size: 20px
      vertical-align: center
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis
    .singer-info-show-content
      margin-top: 40px
      .singer-info-show-item
        margin: 10px 0
        height: 12px
        line-height: 12px
        font-size: 12px
        span
          color: #404040