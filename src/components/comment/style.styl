.comment-wrapper
  width: 100%
  padding-top: 15px
  border-bottom: 1px solid  rgba(145,145,145,0.2)
  .comment
    width: 100%
    display:flex
    .comment-user-avatar-wrapper
      flex: 0 0 50px
      .comment-user-avatar
        height: 40px
        width: 40px
        border-radius: 50% 
    .commcomment-user-avatar-wrpperent-user-info
      flex: 1
      .comment-user-write-content
        line-height: 25px
        font-size: 13px
        .comment-user-write-content-user
          color: #108ee9
      .comment-user-write-content-replied
        padding: 0 5px
        line-height: 25px
        font-size: 13px
        background: rgba(145,145,145,0.2)
        .comment-user-write-content-user-replied
          color: #108ee9
      .comment-user-other-info
        position: relative
        width: 100%
        height: 30px
        color: #5a5a5a
        .comment-user-write-data
          position: absolute
          left: 0
          bottom: 0
          height: 30px 
          line-height: 30px
          font-size: 13px
        .comment-user-share-funcs
          position: absolute
          right: 0
          bottom: 0
          height: 30px
          line-height: 30px
          font-size: 13px
          text-align: center
          display: flex
          .comment-user-share-func
            min-width: 45px
        
      