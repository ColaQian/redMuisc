.recommend-title-wrapper
  position: relative
  width: 100%
  height: 30px
  border-bottom: 1px solid #bfbfbf
  margin-bottom: 10px
  .recommend-title-wrapper-left
    position: absolute
    left: 0
    top: 0
    .recommend-title-wrapper-left-icon
      display: inline-block
      margin-right: 8px
      height: 30px
      line-height: 30px
      font-size: 15px
      text-align: center
    .recommend-title-wrapper-left-text
      height: 30px
      line-height: 30px
      font-size: 15px
      text-align: center
  .recommend-title-wrapper-right
    position: absolute
    right: 0
    top: 0
    .recommend-title-wrapper-right-text
      height: 30px
      line-height: 30px
      font-size: 12px
      color: #5a5a5a
      text-align: center